{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
{%include 'header.html.twig'%}
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <br>
                        <div class="row">
                                    <div class="card">
                                        <h3>{{ article.titre }}</h3>
                                        {% if article.image %}
                                            <img src="{{ asset('uploads/brochures/' ~ article.image) }}" />
                                        {% endif %}
                                        <p>Id : {{ article.id }}</p>
                                        {% if is_granted('ROLE_USER')%}
                                            <a href="{{ path('app_article_update', {id: article.id}) }}" class="btn btn-primary">Modifier</a>
                                            <br>
                                            <a href="{{ path('app_article_delete', {id: article.id}) }}" class="btn btn-danger">Supprimer</a>
                                        {% endif %}
                                        <br>
                                        <p>{{ article.texte }}</p>
                                        <p><small>Publi√© le : {{ article.date|date('Y-m-d') }}</small></p>
                                </div>
                        </div>
                        </div>
                        <div style="height: 100vh"></div>
                        <div class="card mb-4"><div class="card-body">When scrolling, the navigation stays at the top of the page. This is the end of the static navigation demo.</div></div>
                    </div>
                </main>
                {%include 'footer.html.twig'%}
            </div>
        </div>
{% endblock %}